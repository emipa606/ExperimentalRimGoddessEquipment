<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="RTN_ThingBase_TetherApparelMakeable">
    <defName>RTN_Thing_SentinelArmour</defName>
    <label>sentinel armour</label>
    <description>A suit of power armour that has been built with an integrated Faith Tether.</description>
    <graphicData>
      <texPath>Things/Apparel/SentinelArmour/SentinelArmourUT</texPath>
      <shaderType>CutoutComplex</shaderType>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <RTN_Thing_Eternium>80</RTN_Thing_Eternium>
      <Uranium>10</Uranium>
      <Plasteel>20</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
      <RTN_Thing_FaithCrystal>1</RTN_Thing_FaithCrystal>
    </costList>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <MaxHitPoints>280</MaxHitPoints>
      <Mass>9</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.96</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.42</ArmorRating_Blunt>
      <ArmorRating_Heat>0.48</ArmorRating_Heat>
      <Insulation_Cold>30</Insulation_Cold>
      <Insulation_Heat>7</Insulation_Heat>
      <EquipDelay>12</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.4</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/SentinelArmour/SentinelArmourUT</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
