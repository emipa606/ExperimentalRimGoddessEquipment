      </tags>
    </apparel>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
  <ThingDef Name="RTN_ThingBase_TetherApparel" ParentName="RTN_ThingBase_Apparel" Abstract="True">
