<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="RTN_ThingBase_MakeableGun">
    <defName>RTN_Thing_Rifle</defName>
    <label>rifle</label>
    <description>Based on a old gas release single shot rifle, with it long range and low rate of fire it was favoured by marksmen.</description>
    <graphicData>
      <texPath>Things/Weapons/Ranged/Rifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>100</Steel>
      <Plasteel>50</Plasteel>
      <ComponentIndustrial>10</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
      <RTN_Thing_FaithCrystal>1</RTN_Thing_FaithCrystal>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RTN_Thing_RifleBullet</defaultProjectile>
        <warmupTime>1.6</warmupTime>
        <range>38</range>
        <soundCast>Shot_BoltActionRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>RTN_Thing_RifleBullet</defName>
    <label>Rifle bullet</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>20</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>70</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  <ThingDef ParentName="RTN_ThingBase_Gun">
    <defName>RTN_Thing_DivineFinger</defName>
    <label>Divine Finger</label>
    <description>The divine form of the rifle. In it's transformed state it has amplified its range and fire rate and feeds it power back into the Goddess.</description>
    <equippedAngleOffset>45</equippedAngleOffset>
    <graphicData>
      <texPath>Things/Weapons/Ranged/DivineFinger</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <soundInteract>Bow_Large</soundInteract>
    <statBases>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RTN_Thing_DivineFingerArrow</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>40</range>
        <soundCast>Bow_Large</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>RTN_Thing_DivineFingerArrow</defName>
    <label>Divine Finger Arrow</label>
    <projectile>
      <damageDef>Arrow</damageDef>
      <damageAmountBase>22</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>70</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
</Defs>